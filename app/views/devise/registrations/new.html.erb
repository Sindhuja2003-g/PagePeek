

<div class="row justify-content-center mt-5">
  <div class="col-md-6 col-lg-5">
    <div class="card shadow">
      <div class="card-body">
        <h2 class="card-title text-center mb-4">Create Your Account</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "needs-validation" }) do |f| %>

          <div class="mb-3">
            <%= f.label :username, class: "form-label" %>
            <%= f.text_field :username, class: "form-control #{'is-invalid' if resource.errors[:username].any?}" %>
            <% resource.errors[:username].each do |msg| %>
              <div class="invalid-feedback d-block"><%= msg %></div>
            <% end %>
          </div>

          <div class="mb-3">
            <%= f.label :email, class: "form-label" %>
            <%= f.email_field :email, autofocus: true, class: "form-control #{'is-invalid' if resource.errors[:email].any?}" %>
            <% resource.errors[:email].each do |msg| %>
              <div class="invalid-feedback d-block"><%= msg %></div>
            <% end %>
          </div>

          <div class="mb-3">
            <%= f.label :password, class: "form-label" %>
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control #{'is-invalid' if resource.errors[:password].any?}" %>
            <% resource.errors[:password].each do |msg| %>
              <div class="invalid-feedback d-block"><%= msg %></div>
            <% end %>
          </div>

          <div class="mb-3">
            <%= f.label :password_confirmation, class: "form-label" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control #{'is-invalid' if resource.errors[:password_confirmation].any?}" %>
            <% resource.errors[:password_confirmation].each do |msg| %>
              <div class="invalid-feedback d-block"><%= msg %></div>
            <% end %>
          </div>

          <div class="d-grid gap-2">
            <%= f.submit "Sign up", class: "btn btn-primary" %>
          </div>
        <% end %>

        <div class="text-center mt-3">
          <p class="text-muted">Already have an account?</p>
          <%= link_to "Log in", new_user_session_path, class: "btn btn-outline-secondary btn-sm px-4" %>
        </div>
      </div>
    </div>
  </div>
</div>
