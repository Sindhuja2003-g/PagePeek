<div class="container mt-5">
  <h2 class="mb-4 text-primary"><i class="bi bi-tags-fill"></i> All Genres</h2>

  <% if @genres.any? %>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
      <% @genres.each do |genre| %>
        <div class="col">
          <div class="card h-100 shadow-sm border-primary">
            <div class="card-body d-flex align-items-center justify-content-between">
              <h5 class="card-title mb-0">
                <i class="bi bi-bookmark-star-fill text-warning me-2"></i>
                <%= link_to genre.name, genre_path(genre), class: "text-decoration-none" %>
              </h5>
              <%= link_to genre_path(genre), class: "btn btn-outline-primary btn-sm" do %>
                View <i class="bi bi-arrow-right-circle"></i>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-muted">No genres available.</p>
  <% end %>
</div>
