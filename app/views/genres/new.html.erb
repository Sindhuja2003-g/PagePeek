<div class="container mt-5">
  <h2 class="mb-4 text-success"><i class="bi bi-plus-circle"></i> Add New Genre</h2>

  <%= form_with(model: @genre, local: true) do |f| %>
    <div class="mb-3">
      <%= f.label :name, class: "form-label" %>
      <%= f.text_field :name, class: "form-control", placeholder: "Enter genre name" %>
    </div>
    <%= f.submit "Create Genre", class: "btn btn-primary" %>
  <% end %>
</div>
