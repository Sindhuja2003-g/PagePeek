<div class="container mt-5">
  <h2 class="mb-4 text-success">
    <i class="bi bi-bookmarks-fill"></i> Books in <strong><%= @genre.name %></strong>
  </h2>

  <% if @genre.books.any? %>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
      <% @genre.books.each do |book| %>
        <div class="col">
          <div class="card h-100 shadow-sm">
            <div class="card-body">
              <h5 class="card-title">
                <i class="bi bi-book-half text-primary me-1"></i>
                <%= link_to book.title, book_path(book), class: "text-decoration-none" %>
              </h5>
              <p class="card-text text-muted">
                <i class="bi bi-person-lines-fill"></i> <strong>Author:</strong> <%= book.author %><br>
                <i class="bi bi-hand-thumbs-up-fill text-danger"></i> <strong>Likes:</strong> <%= book.likes.count %>
              </p>
            </div>
            <div class="card-footer bg-light border-top-0 text-end">
              <%= link_to "View Book", book_path(book), class: "btn btn-sm btn-outline-primary" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-muted">No books available under this genre.</p>
  <% end %>

  <div class="mt-4">
    <%= link_to genres_path, class: "btn btn-secondary" do %>
      <i class="bi bi-arrow-left-circle me-1"></i> All Genres
    <% end %>
  </div>
</div>
