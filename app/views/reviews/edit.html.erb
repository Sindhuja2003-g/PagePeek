<div class="container mt-5">
  <div class="card p-4 shadow">
    <h3 class="mb-4">Edit Your Review for "<%= @review.book.title %>"</h3>



<%= form_with model: [@book, @review], local: true do |f| %>
  <div class="mb-3">
    <%= f.label :rating %>
    <%= f.number_field :rating, in: 1..5, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :review %>
    <%= f.text_area :review, class: "form-control", rows: 5 %>
  </div>

  <%= f.submit "Update Review", class: "btn btn-primary" %>
<% end %>

  </div>
</div>
