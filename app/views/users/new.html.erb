<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-sm">
        <div class="card-header bg-success text-white text-center">
          <h4><i class="bi bi-person-plus-fill me-2"></i>Sign Up</h4>
        </div>
        <div class="card-body">
          <%= form_with model: @user, url: users_path, local: true do |form| %>
            <div class="mb-3">
              <%= form.label :email, class: "form-label" %>
              <%= form.email_field :email, class: "form-control", placeholder: "Enter your email" %>
            </div>

            <div class="mb-3">
              <%= form.label :password, class: "form-label" %>
              <%= form.password_field :password, class: "form-control", placeholder: "Create a password" %>
            </div>

            <div class="d-grid gap-2">
              <%= form.submit "Sign Up", class: "btn btn-success" %>
            </div>
          <% end %>

          <div class="mt-3 text-center">
            <p>Already have an account? <%= link_to "Login", login_path, class: "link-success" %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
