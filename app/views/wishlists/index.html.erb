<div class="container py-4">
  <h2 class="mb-4 text-center fw-bold">
    <i class="bi bi-bookmark-heart-fill text-primary"></i> My Wishlist
  </h2>

  <% if @wishlist_books.any? %>
    <div class="row g-4">
      <% @wishlist_books.each do |book| %>
        <div class="col-md-6 col-lg-4">
          <div class="card shadow-sm border-0 h-100">
            <div class="card-body d-flex flex-column justify-content-between">
              <div>
                <h5 class="card-title">
                  <%= link_to book.title, book_path(book), class: "text-decoration-none text-dark fw-semibold" %>
                </h5>
                <p class="card-subtitle mb-1 text-muted">by <%= book.author %></p>
                <p class="text-muted mb-1">
                  <i class="bi bi-calendar-event"></i> Published: <%= book.published.strftime("%B %d, %Y") %>
                </p>
                <p class="text-muted">
                  <i class="bi bi-hand-thumbs-up-fill text-success"></i> <%= book.likes.count %> Likes
                </p>
              </div>

              <div class="mt-3 d-flex justify-content-between align-items-center">
                <%= link_to "View Book", book_path(book), class: "btn btn-outline-primary btn-sm" %>

                <%= button_to remove_from_wishlist_path(book_id: book.id),
                              method: :delete,
                              class: "btn btn-outline-danger btn-sm" do %>
                  <i class="bi bi-bookmark-dash-fill"></i> Remove
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="alert alert-info text-center mt-4">
      <i class="bi bi-info-circle"></i> You have no books in your wishlist yet.
    </div>
  <% end %>
</div>
