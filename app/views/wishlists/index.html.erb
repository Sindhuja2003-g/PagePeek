<div class="container mt-5">
  <h2 class="fw-bold mb-4">My Wishlist</h2>



  <% if @wishlist_books.any? %>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
      <% @wishlist_books.each do |book| %>
        <div class="col">
          <div class="card h-100 shadow-sm border-0">
            <div class="card-body d-flex flex-column">
              <h4 class="card-title fw-bold">
                <%= link_to book.title, book_path(book), class: "text-decoration-none text-dark" %>
              </h4>
              <h6 class="card-subtitle mb-2 text-muted">Author: <%= book.author %></h6>
          <% wishlist = current_user.wishlists.find_by(book_id: book.id) %>
<%= button_to wishlist_path(wishlist),
              method: :delete,
              class: "btn btn-outline-danger btn-sm mt-auto" do %>
  <i class="bi bi-bookmark-dash"></i> Remove from Wishlist
<% end %>

            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="alert alert-info mt-4">Your wishlist is empty.</div>
  <% end %>
</div>
